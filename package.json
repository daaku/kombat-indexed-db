{
  "name": "@daaku/kombat-indexed-db",
  "author": "Naitik Shah <n@daaku.org>",
  "version": "3.1.0",
  "description": "Kombat storage implemented using IndexedDB.",
  "repository": "git@github.com:daaku/kombat-indexed-db",
  "license": "MIT",
  "prettier": "prettier-config-daaku",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/src/index.js",
      "types": "./dist/src/index.d.ts"
    }
  },
  "eslintConfig": {
    "extends": "@daaku"
  },
  "scripts": {
    "check:types": "tsc --noEmit",
    "check:lint": "eslint --fix --ignore-pattern dist .",
    "check": "run-p 'check:*' 'test'",
    "build:js": "tsc",
    "build:test": "esbuild --bundle --sourcemap --outdir=dist/bundle test/tests.ts",
    "test": "npm run build:test && qunit-puppeteer",
    "build": "run-p check build:js",
    "deploy": "npm run build && npm publish --access=public"
  },
  "keywords": [
    "kombat",
    "crdt",
    "indexeddb"
  ],
  "devDependencies": {
    "@daaku/eslint-config": "^4.2.0",
    "@daaku/qunit-puppeteer": "^3.0.0",
    "@types/qunit": "^2.11.3",
    "esbuild": "^0.17.0",
    "eslint": "^8.7.0",
    "nanoid": "^4.0.0",
    "npm-run-all": "^4.1.5",
    "prettier-config-daaku": "^1.0.0",
    "qunit": "^2.17.2",
    "typescript": "^4.5.4"
  },
  "dependencies": {
    "@daaku/kombat": "^2.0.0",
    "idb": "^7.0.2"
  }
}
