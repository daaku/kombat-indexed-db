{
  "name": "@daaku/kombat-indexed-db",
  "author": "Naitik Shah <n@daaku.org>",
  "version": "3.7.0",
  "description": "Kombat storage implemented using IndexedDB.",
  "repository": "git@github.com:daaku/kombat-indexed-db",
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/src/index.js",
      "types": "./dist/src/index.d.ts"
    },
    "./store": {
      "import": "./dist/src/store.js",
      "types": "./dist/src/store.d.ts"
    }
  },
  "prettier": {
    "arrowParens": "avoid",
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "scripts": {
    "test": "vite build && TIMEOUT=30000 qunit-puppeteer",
    "deploy": "npm run test && npm publish --access=public",
    "prepare": "tsc",
    "dev": "vite"
  },
  "keywords": [
    "kombat",
    "crdt",
    "indexeddb"
  ],
  "devDependencies": {
    "@daaku/qunit-puppeteer": "^4.0.0",
    "@types/qunit": "^2.11.3",
    "nanoid": "^5.0.1",
    "qunit": "^2.17.2",
    "typescript": "^5.0.2",
    "vite": "^6.0.0"
  },
  "dependencies": {
    "@daaku/kombat": "^2.14.0",
    "dequal": "^2.0.3",
    "idb": "^8.0.0"
  }
}
